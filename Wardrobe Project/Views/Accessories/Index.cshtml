@model IEnumerable<Wardrobe_Project.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<h2>Accessories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Description)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Photo)</p>
                    <p>@Html.DisplayFor(modelItem => item.Color)</p>
                    <p>@Html.DisplayFor(modelItem => item.Season)</p>
                    <p>@Html.DisplayFor(modelItem => item.Occasion)</p>
                    <p class="text-center">@Html.ActionLink("Details", "Details", new { id = item.AccessoryID })</p>
                </div>
            </div>
        </div>
    }
</div>




























